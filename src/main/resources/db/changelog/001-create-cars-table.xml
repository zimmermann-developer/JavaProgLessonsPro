<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="001-create-cars-table" author="Igor Zimmermann">
        <createTable tableName="cars">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="brand" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="model" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="production_year" type="INT">
                <constraints nullable="false" />
            </column>

            <column name="mileage" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="fuel_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="transmission" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>


        </createTable>
    </changeSet>

</databaseChangeLog>